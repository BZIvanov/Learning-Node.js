<div>
  <form method='POST' action='/user/register'>
    <fieldset>
      <legend>Register</legend>
      <div>
        <label for='inputFullName'>Full Name</label>
        <div>
          <input
            type='text'
            id='inputFullName'
            placeholder='Full Name'
            required='true'
            name='fullName'
            value='{{fullName}}'
          />
        </div>
      </div>
      <div>
        <label for='inputEmail'>Email</label>
        <div>
          <input
            type='text'
            id='inputEmail'
            placeholder='Email'
            name='email'
            required='true'
            value='{{email}}'
          />
        </div>
      </div>
      <div>
        <label for='inputPassword'>Password</label>
        <div>
          <input
            type='password'
            id='inputPassword'
            placeholder='Password'
            required='true'
            name='password'
          />
        </div>
      </div>
      <div>
        <label for='inputRepeatedPassword'>Confirm Password</label>
        <div>
          <input
            type='password'
            id='inputRepeatedPassword'
            placeholder='Confirm Password'
            required='true'
            name='repeatedPassword'
          />
        </div>
      </div>
      <div>
        <div>
          <button type='reset'>Cancel</button>
          <button type='submit'>Submit</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>