<div>
  <form method='POST' action='/user/login'>
    <fieldset>
      <legend>Login</legend>
      <div>
        <label>Email</label>
        <div>
          <input type='text' id='inputEmail' placeholder='Email' name='email' />
        </div>
      </div>
      <div>
        <label>Password</label>
        <div>
          <input
            type='password'
            id='inputPassword'
            placeholder='Password'
            name='password'
          />
        </div>
      </div>
      <div>
        <div>
          <a href='/'>Cancel</a>
          <button type='submit'>Login</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>