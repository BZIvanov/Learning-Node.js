<h1>Welcome to SoftUni Wiki!</h1>
<section id="featured">
    <h2>Latest article</h2>
    <article>
        <h3>{{latest.title}}</h3>
        <p>
            {{latest.content}}&hellip;
        </p>
        <div class="controls">
            <a href="/article/display/{{latest._id}}">Read more</a>
        </div>
    </article>
</section>
<section id="recent">
    <h2>Recently added articles</h2>
    <ul>
        {{#each articles}}
            <li>
                {{!-- Should be working without this as well --}}
                <a href="/article/display/{{this._id}}">{{this.title}}</a>
            </li>
        {{/each}}
    </ul>
</section>
