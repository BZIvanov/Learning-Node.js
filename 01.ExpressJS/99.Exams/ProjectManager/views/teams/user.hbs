<h1>Teams</h1>
<form class="search" method="GET" action="/searchTeam">
  <label>Seach: </label>
  <input type="text" name="name" value="{{result}}">
  <input type="submit" value="Search">
</form>
<div class="teams">
  {{#each teams}}
    <div class="team">
      <h2>{{name}}</h2>
      <div class="team-info">
        <h3>Members</h3>
        {{#each this.members}}
          {{this.username}}
        {{else}}
          <p>Team has no members</p>
        {{/each}}
      </div>
      <div class="team-info">
        <h3>Projects</h3>
        {{#each this.projects}}
          {{this.name}}
        {{else}}
          <p>Team has no projects</p>
        {{/each}}
      </div>
    </div>
  {{else}}
    <h2>No teams to display</h2>
  {{/each}}
</div>
