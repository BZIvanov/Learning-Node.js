<h1>My Profile</h1>
<div class="profile-box">
    <img src="{{profilePicture}}">
    <div class="profile">
        <div class="info">
            <h3>My Teams</h3>
            {{#each this.teams}}
                <form method="POST" action="/leaveTeam">
                    <p>{{this.name}}</p>
                    <input type="hidden" name="teamId" value="{{this.id}}">
                    <input type="submit" value="Leave Team">
                </form>
            {{else}}
                <p>You have no teams</p>
            {{/each}}
        </div>
        <div class="more-info">
            <h3>My Projects</h3>
            <p>You have no projects!</p>
        </div>
    </div>
</div>
